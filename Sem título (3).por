programa {
  funcao inicio() {
  //declaracao de variveis
  real media,soma,nota_1,nota_2

  //solicitacao de dados ao usuario
  escreva("digite a sua primeira nota:")
  leia(nota_1)
  escreva("digite a sua segunda nota:")
  leia(nota_2)

  //calculando
  soma=nota_1+nota_2
  media=soma /2

  //mostrando dados ao usuario
  escreva("primeira nota:" +nota_1)
  escreva("\nsegunda nota:" +nota_1)
  escreva("\nmedia:" +media)
    
  }
}
